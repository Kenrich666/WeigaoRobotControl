<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.main.CircularArrivalActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="返回"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Right Buttons -->
    <LinearLayout
        android:id="@+id/ll_top_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_open_door"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:text="开门"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btn_return_home"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="返航"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@null"/>
    </LinearLayout>

    <!-- Center Hint Box -->
    <FrameLayout
        android:id="@+id/fl_hint_box"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_top_buttons">
        
        <!-- Inner white background to make it look like a border if rounded_button is solid color, 
             or just rely on the drawable. Assuming rounded_button is a solid shape.
             The sketch shows a box with text. Let's make it a outlined box or light background.
             Since I can't see rounded_button xml, I'll assume standard button style.
             I'll style it manually to look like a message box.
         -->
         <TextView
             android:id="@+id/tv_arrival_message"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:text="请尽快把货物放入机器人中"
             android:textColor="#333333"
             android:textSize="32sp"
             android:textStyle="bold"
             android:background="#F0F0F0"/>
    </FrameLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/ll_bottom_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginEnd="40dp"
            android:text="继续"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btn_full_return"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="已装满。回到出餐口"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@null"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
