<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 物品配送速度 Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品配送速度"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Item Delivery Speed Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 配送速度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="配送速度"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekbar_item_delivery_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="80"
                        android:min="10"
                        android:progress="50"
                        android:progressTint="#4A90E2"
                        android:thumbTint="#4A90E2" />

                    <TextView
                        android:id="@+id/tv_item_delivery_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="end"
                        android:minWidth="60dp"
                        android:text="50 cm/s"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 返航速度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="返航速度"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekbar_item_return_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="80"
                        android:min="10"
                        android:progress="50"
                        android:progressTint="#4A90E2"
                        android:thumbTint="#4A90E2" />

                    <TextView
                        android:id="@+id/tv_item_return_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="end"
                        android:minWidth="60dp"
                        android:text="50 cm/s"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
            </androidx.cardview.widget.CardView>

            <!-- 循环配送速度 Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="循环配送速度"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Speed Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 配送速度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="配送速度"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekbar_circular_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="80"
                        android:min="10"
                        android:progress="50"
                        android:progressTint="#4A90E2"
                        android:thumbTint="#4A90E2" />

                    <TextView
                        android:id="@+id/tv_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="end"
                        android:minWidth="60dp"
                        android:text="50 cm/s"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 循环返航速度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="返航速度"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekbar_return_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="80"
                        android:min="10"
                        android:progress="50"
                        android:progressTint="#4A90E2"
                        android:thumbTint="#4A90E2" />

                    <TextView
                        android:id="@+id/tv_return_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="end"
                        android:minWidth="60dp"
                        android:text="50 cm/s"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

            </androidx.cardview.widget.CardView>

            <!-- 密码 Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Password Settings Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 修改密码 -->
                    <RelativeLayout
                        android:id="@+id/layout_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改密码"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="#999999"/>

                    </RelativeLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D8DD"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- 支持密码的场景 -->
