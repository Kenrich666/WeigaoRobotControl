<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="充电器设置"
            android:textColor="@color/medical_text_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Battery Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Battery Icon and Percentage -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/batteryIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_lock_power_off"
                        android:contentDescription="电池图标"
                        app:tint="@color/medical_primary" />

                    <TextView
                        android:id="@+id/batteryPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="79%"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/medical_text_primary" />
                </LinearLayout>

                <!-- Battery Progress Indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/batteryProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:max="100"
                    android:progress="79"
                    app:indicatorColor="@color/medical_primary"
                    app:trackColor="@color/medical_secondary"
                    app:trackCornerRadius="12dp"
                    app:trackThickness="24dp"
                    app:indicatorDirectionCircular="clockwise" />

                <!-- Charging Status Text -->
                <TextView
                    android:id="@+id/tvChargingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="正在充电"
                    android:textColor="@color/medical_primary"
                    android:textSize="18sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Auto Charge Button (Primary) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chargeNowButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="自动回充 (AUTO)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="32dp"
                    app:backgroundTint="@color/medical_primary"
                    app:icon="@drawable/ic_home_return"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp" />

                <!-- Manual Charge Button (Tonal Secondary) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manualChargeButton"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="手动推入 (Manual)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/medical_primary"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="32dp"
                    app:backgroundTint="@color/medical_secondary"
                    app:icon="@drawable/ic_settings_gear"
                    app:iconTint="@color/medical_primary"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"/>

                <!-- Stop Charge Button (Neutral Outlined) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopChargeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="停止充电 (Stop)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/medical_text_secondary"
                    android:layout_marginBottom="24dp"
                    app:strokeColor="@color/medical_divider"
                    app:strokeWidth="1dp"
                    app:cornerRadius="32dp"
                    app:icon="@drawable/ic_stop_circle"
                    app:iconTint="@color/medical_text_secondary"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:backgroundTint="@android:color/transparent"/>

                <!-- Help Text -->
                <TextView
                    android:id="@+id/helpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如果自动回充失败，请手动将机器人推入充电桩"
                    android:textSize="14sp"
                    android:textColor="@color/medical_text_secondary"
                    android:gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>