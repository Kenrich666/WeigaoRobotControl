<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medical_background"
    tools:context=".ui.main.DeliveryActivity">

    <!-- Top Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/medical_text_primary" />

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="物品配送"
            android:textColor="@color/medical_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/history_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="配送记录"
                android:textColor="@color/medical_primary"
                android:textSize="16sp"
                app:icon="@drawable/ic_history_clock"
                app:iconTint="@color/medical_primary" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/medical_divider" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/return_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返航"
                android:textColor="@color/medical_warning"
                android:textSize="16sp"
                app:icon="@drawable/ic_home_return"
                app:iconTint="@color/medical_warning" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">

        <!-- Left Pane: Robot Shelf Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货柜状态"
                    android:textColor="@color/medical_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="点击层号选中，可多选"
                    android:textColor="@color/medical_text_secondary"
                    android:textSize="16sp" />

                <!-- Robot Visual / Shelf Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="24dp"
                    android:background="@drawable/bg_robot_frame"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/l1_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_shelf_item"
                        android:text="L1 层"
                        android:textColor="@color/medical_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/l2_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/selector_shelf_item"
                        android:text="L2 层"
                        android:textColor="@color/medical_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/l3_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_shelf_item"
                        android:text="L3 层"
                        android:textColor="@color/medical_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/open_door_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="手动开门"
                    android:textColor="@color/medical_primary"
                    android:textSize="18sp"
                    app:cornerRadius="32dp"
                    app:icon="@drawable/ic_door_open"
                    app:iconGravity="textStart"
                    app:iconTint="@color/medical_primary"
                    app:strokeColor="@color/medical_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Right Pane: Destination Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/all_points_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择目的地"
                    android:textColor="@color/medical_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- RecyclerView for Points -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/points_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="16dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_delivery_route_card" />

                <!-- Start Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_delivery_button"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:text="立即出发"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/medical_primary"
                    app:cornerRadius="36dp"
                    app:icon="@drawable/ic_delivery_robot"
                    app:iconGravity="textStart"
                    app:iconSize="32dp"
                    app:iconTint="@color/white"
                    app:elevation="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>