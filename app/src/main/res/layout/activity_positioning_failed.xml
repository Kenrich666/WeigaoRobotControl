<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/medical_background"
    android:padding="32dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_dialog_alert"
        android:layout_marginBottom="32dp"
        android:contentDescription="Warning Icon"
        app:tint="@color/medical_error" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位失败"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/medical_text_primary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请将机器人推回充电桩重新尝试定位"
        android:textSize="24sp"
        android:textColor="@color/medical_text_secondary"
        android:layout_marginBottom="64dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retry"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:text="重试"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/medical_primary"
            android:textColor="@color/white"
            app:cornerRadius="32dp"
            android:layout_marginEnd="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:text="取消"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/medical_text_secondary"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp"
            app:cornerRadius="32dp" />
    </LinearLayout>

</LinearLayout>
