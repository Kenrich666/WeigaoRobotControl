<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SettingsActivity">

    <LinearLayout
        android:id="@+id/settings_header"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--修改返回键内填充-->
        <Button
            android:id="@+id/btn_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="&lt;"
            android:textColor="#1976D2" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/weigaologo" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/settings_menu"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="#E3F2FD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_basic_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础设置"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sound_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="声音设置"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_scheduled_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="定时任务"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delivery_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="配送模式"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通知铃设置"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_remote_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="远程设置"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pager_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="呼叫器设置"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_charger_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="充电器设置"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_wifi_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wifi网络"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_scene_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="场景设置"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_about_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="了解我"
                android:visibility="gone"
                app:backgroundTint="#2196F3" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/settings_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_menu"
        app:layout_constraintEnd_toEndOf="parent">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="显示左边的对应设置的具体内容"-->
<!--            android:layout_gravity="center"/>-->

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
