<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 时间设置标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 取餐停留时长 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取餐停留时长"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <SeekBar
                android:id="@+id/seekbar_meal_pickup_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="300"
                android:progress="0"
                android:progressTint="#4A90E2"
                android:thumbTint="#4A90E2" />

            <TextView
                android:id="@+id/tv_meal_pickup_duration"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0秒"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 行走暂停时长 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行走暂停时长"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <SeekBar
                android:id="@+id/seekbar_walking_pause_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="29"
                android:progress="0"
                android:progressTint="#4A90E2"
                android:thumbTint="#4A90E2" />

            <TextView
                android:id="@+id/tv_walking_pause_duration"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="1秒"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 速度设置标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="速度设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 送餐速度 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送餐速度"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <SeekBar
                android:id="@+id/seekbar_delivery_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="70"
                android:progress="0"
                android:progressTint="#4A90E2"
                android:thumbTint="#4A90E2" />

            <TextView
                android:id="@+id/tv_delivery_speed"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="10cm/s"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 返航速度 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返航速度"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <SeekBar
                android:id="@+id/seekbar_return_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="70"
                android:progress="0"
                android:progressTint="#4A90E2"
                android:thumbTint="#4A90E2" />
            <TextView
                android:id="@+id/tv_return_speed"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="10cm/s"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>