<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medical_background"
    tools:context=".ui.main.ConfirmReceiptActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <!-- Left Side: Robot Shelf Status -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_split"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/robot_body"
            android:layout_width="260dp"
            android:layout_height="0dp"
            android:layout_marginVertical="48dp"
            android:background="@drawable/bg_robot_frame"
            android:elevation="0dp"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="内镜转运机器人"
                android:textColor="@color/medical_text_secondary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layer_l1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp"
                android:background="@drawable/item_point_style"
                android:gravity="center"
                android:text="L1 层"
                android:textColor="@color/medical_text_primary"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layer_l2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp"
                android:background="@drawable/item_point_style"
                android:gravity="center"
                android:text="L2 层"
                android:textColor="@color/medical_text_primary"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layer_l3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_point_style"
                android:gravity="center"
                android:text="L3 层"
                android:textColor="@color/medical_text_primary"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Right Side: Status and Interactions -->
    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_split"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送到达"
            android:textColor="@color/medical_primary"
            android:textSize="56sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@color/medical_text_secondary"
            android:textSize="32sp" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="30s 后自动离开"
            android:textColor="@color/medical_warning"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_arrival_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/medical_success"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/instruction_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请取走"
                android:textColor="@color/medical_text_primary"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_layers_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="L1 层 L2 层"
                android:textColor="@color/medical_primary"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_cabin"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/medical_primary"
            android:text="打开舱门"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_door_open"
            app:iconGravity="textStart"
            app:iconSize="32dp"
            app:iconTint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>