<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medical_background"
    android:padding="24dp"
    tools:context=".ui.main.MainActivity">

    <!-- Header Section: Centered Logo and Title -->

    <!-- Main Content: Dashboard Cards -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="733dp"
            android:layout_height="124dp"
            android:contentDescription="Weigao Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/weigaologo" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.02"
            android:text="内镜转运机器人"
            android:textColor="@color/medical_text_primary"
            android:textSize="56sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container">

        <!-- Card 1: Item Delivery -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_item_delivery"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:rippleColor="@color/medical_secondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_delivery"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_delivery_robot"
                    app:tint="@color/medical_primary" />

                <TextView
                    android:id="@+id/text_delivery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="物品配送"
                    android:textColor="@color/medical_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <!-- Button Overlay (Hidden, compatibility) -->
                <Button
                    android:id="@+id/btn_item_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Loop Delivery -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_loop_delivery"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginStart="32dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:rippleColor="@color/medical_secondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_loop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_loop_mode"
                    app:tint="@color/medical_primary" />

                <TextView
                    android:id="@+id/text_loop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="循环配送"
                    android:textColor="@color/medical_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <!-- Button Overlay -->
                <Button
                    android:id="@+id/btn_loop_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Footer Container for Status and Settings -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Status Strip -->
        <TextView
            android:id="@+id/tv_status_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="系统状态：正常"
            android:textColor="@color/medical_success"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_settings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="系统设置"
            android:textColor="@color/medical_text_secondary"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_settings_gear"
            app:iconTint="@color/medical_text_secondary"
            app:iconSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>