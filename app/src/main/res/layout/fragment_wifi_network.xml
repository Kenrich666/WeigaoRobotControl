<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="网络设置"
            android:textColor="@color/medical_text_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- WiFi Header with Toggle -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_wifi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="无线局域网"
                    android:textColor="@color/medical_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    app:thumbTint="@color/medical_primary"
                    app:trackTint="@color/medical_divider" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Current Connected WiFi Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_current_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/iv_current_wifi_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="@color/medical_primary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/iv_current_wifi_icon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_current_wifi_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HUAWEI-R1CJY7"
                        android:textColor="@color/medical_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_connection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已连接"
                        android:textColor="@color/medical_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_play_circle"
                    android:rotation="90"
                    app:tint="@color/medical_primary" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Available WiFi Networks Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/medical_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp"
                    android:text="附近可连接的Wi-Fi"
                    android:textColor="@color/medical_text_secondary"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/medical_divider" />

                <!-- WiFi List Items (Repeating structure) -->
                <!-- Item 1 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/iv_wifi_icon_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/medical_text_secondary" />

                    <TextView
                        android:id="@+id/tv_wifi_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/iv_wifi_icon_1"
                        android:text="HUAWEI-YP"
                        android:textColor="@color/medical_text_primary"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_lock_icon_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="@color/medical_text_secondary" />
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/medical_divider" android:layout_marginStart="64dp" />

                <!-- Item 2 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">
                    <ImageView android:id="@+id/iv_wifi_icon_2" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/medical_text_secondary" />
                    <TextView android:id="@+id/tv_wifi_name_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@id/iv_wifi_icon_2" android:text="IGIP" android:textColor="@color/medical_text_primary" android:textSize="18sp" />
                    <ImageView android:id="@+id/iv_lock_icon_2" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_lock_lock" app:tint="@color/medical_text_secondary" />
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/medical_divider" android:layout_marginStart="64dp" />

                <!-- Item 3 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">
                    <ImageView android:id="@+id/iv_wifi_icon_3" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/medical_text_secondary" />
                    <TextView android:id="@+id/tv_wifi_name_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@id/iv_wifi_icon_3" android:text="eduroam" android:textColor="@color/medical_text_primary" android:textSize="18sp" />
                    <ImageView android:id="@+id/iv_lock_icon_3" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_lock_lock" app:tint="@color/medical_text_secondary" />
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/medical_divider" android:layout_marginStart="64dp" />

                <!-- Item 4 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">
                    <ImageView android:id="@+id/iv_wifi_icon_4" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/medical_text_secondary" />
                    <TextView android:id="@+id/tv_wifi_name_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@id/iv_wifi_icon_4" android:text="sdu_guest" android:textColor="@color/medical_text_primary" android:textSize="18sp" />
                    <ImageView android:id="@+id/iv_lock_icon_4" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_lock_lock" app:tint="@color/medical_text_secondary" />
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/medical_divider" android:layout_marginStart="64dp" />

                <!-- Item 5 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">
                    <ImageView android:id="@+id/iv_wifi_icon_5" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/medical_text_secondary" />
                    <TextView android:id="@+id/tv_wifi_name_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@id/iv_wifi_icon_5" android:text="sdu_net" android:textColor="@color/medical_text_primary" android:textSize="18sp" />
                    <ImageView android:id="@+id/iv_lock_icon_5" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_lock_lock" app:tint="@color/medical_text_secondary" />
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/medical_divider" android:layout_marginStart="64dp" />

                <!-- Item 6 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">
                    <ImageView android:id="@+id/iv_wifi_icon_6" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/medical_text_secondary" />
                    <TextView android:id="@+id/tv_wifi_name_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@id/iv_wifi_icon_6" android:text="HP-Print-CC-LaserJet Pro MFP" android:textColor="@color/medical_text_primary" android:textSize="18sp" />
                    <ImageView android:id="@+id/iv_lock_icon_6" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_lock_lock" app:tint="@color/medical_text_secondary" />
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/medical_divider" android:layout_marginStart="64dp" />

                <!-- Item 7 -->
                <RelativeLayout
                    android:id="@+id/wifi_item_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="24dp">
                    <ImageView android:id="@+id/iv_wifi_icon_7" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/medical_text_secondary" />
                    <TextView android:id="@+id/tv_wifi_name_7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@id/iv_wifi_icon_7" android:text="HUAWEI-G326dyj" android:textColor="@color/medical_text_primary" android:textSize="18sp" />
                    <ImageView android:id="@+id/iv_lock_icon_7" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@android:drawable/ic_lock_lock" app:tint="@color/medical_text_secondary" />
                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>