<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medical_background"
    tools:context=".ui.auth.PasswordActivity">

    <!-- Top Bar -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:contentDescription="Back"
        android:elevation="2dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/medical_text_primary" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left Side: Prompt -->
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="48dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份验证"
                android:textColor="@color/medical_primary"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="请输入密码"
                android:gravity="center"
                android:textColor="@color/medical_text_secondary"
                android:textSize="24sp"
                android:lineSpacingExtra="8dp"/>

            <!-- Password Dots -->
            <LinearLayout
                android:id="@+id/ll_indicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="horizontal">
                
                <ImageView android:id="@+id/dot_1" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_dot_empty" android:layout_marginEnd="16dp" app:tint="@color/medical_text_secondary"/>
                <ImageView android:id="@+id/dot_2" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_dot_empty" android:layout_marginEnd="16dp" app:tint="@color/medical_text_secondary"/>
                <ImageView android:id="@+id/dot_3" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_dot_empty" android:layout_marginEnd="16dp" app:tint="@color/medical_text_secondary"/>
                <ImageView android:id="@+id/dot_4" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_dot_empty" android:layout_marginEnd="16dp" app:tint="@color/medical_text_secondary"/>
                <ImageView android:id="@+id/dot_5" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_dot_empty" android:layout_marginEnd="16dp" android:visibility="gone" app:tint="@color/medical_text_secondary"/>
                <ImageView android:id="@+id/dot_6" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_dot_empty" android:layout_marginEnd="16dp" android:visibility="gone" app:tint="@color/medical_text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="400dp"
            android:background="@color/medical_divider"
            android:layout_marginHorizontal="24dp"/>

        <!-- Right Side: Keypad -->
        <GridLayout
            android:id="@+id/grid_keypad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:paddingStart="48dp">

            <!-- Buttons: White circles with elevation -->
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1" android:tag="1"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="1" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2" android:tag="2"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="2" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3" android:tag="3"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="3" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4" android:tag="4"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="4" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5" android:tag="5"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="5" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6" android:tag="6"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="6" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7" android:tag="7"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="7" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8" android:tag="8"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="8" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9" android:tag="9"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="9" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

            <!-- Placeholder -->
            <Space android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0" android:tag="0"
                android:layout_width="96dp" android:layout_height="96dp" android:layout_margin="12dp"
                android:text="0" android:textSize="36sp" android:textColor="@color/medical_text_primary"
                android:backgroundTint="@color/white" android:elevation="4dp"
                android:stateListAnimator="@null"
                app:cornerRadius="48dp" />

             <!-- Delete Button -->
            <FrameLayout
                android:id="@+id/btn_delete"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_backspace"
                    app:tint="@color/medical_text_secondary" />
            </FrameLayout>

        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
