<?xml version="1.0" encoding="utf-8"?>
<!-- 浅蓝色渐变圆角按钮 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="@color/button_pressed_start" 
                android:endColor="@color/button_pressed_end" 
                android:angle="135"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/accent_blue_400"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="@color/button_primary_start" 
                android:endColor="@color/button_primary_end" 
                android:angle="135"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/accent_blue_300"/>
        </shape>
    </item>
</selector>
